        "start": "npm run css-watch"
    },
    "devDependencies": {
        "axios": "^0.21",
        "blade-formatter": "^1.16.2",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "node-sass": "^6.0.1",
        "postcss": "^8.1.14"
    },
    "dependencies": {
        "bulma": "^0.9.3",
        "bulma-carousel": "^4.0.24"
    }
